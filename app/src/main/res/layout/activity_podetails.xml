<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PO.POdetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPOsubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PO SubjectSubjectSubjectSubject"
            android:textAlignment="center"
            android:textSize="@dimen/_20sdp" />

        <EditText
            android:id="@+id/tvPOremarks"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="PO SUbjectSubjectSubjectSubject"
            android:textAlignment="gravity"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPOAssignedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="A.By. Mohammed Suleman Ahmed"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tvPOAssignedTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="A.To. Mohammed SulemanAhmed"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPODate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Date:19-04-2024"
                android:textSize="@dimen/_13sdp" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tvAttachmentLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="PO Attachment Link: "
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPOUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="Update Remarks"
        android:layout_gravity="center"
        android:textSize="@dimen/_14sdp" />

    <Button
        android:id="@+id/btnPOcomplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_margin="@dimen/_20sdp"
        android:text="Complete PO"
        android:layout_gravity="center"
        android:textSize="@dimen/_14sdp" />


</LinearLayout>