<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_10sdp"
    android:elevation="4dp"
    app:cardCornerRadius="5dp"
    android:orientation="horizontal">

    <!-- PO Subject TextView -->
    <TextView
        android:id="@+id/tvposubject"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_9sdp"
        android:text="PO SubjectSubjectSubject"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LinearLayout for Assigned By and Assigned To -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvposubject"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Assigned By TextView -->
        <TextView
            android:id="@+id/tvassignedby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:text="A.By"
            android:textSize="@dimen/_10sdp" />

        <!-- Assigned To TextView -->
        <TextView
            android:id="@+id/tvassignedto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:text="A.To."
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
