<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">
    <!--

         Replace with your actual layout structure and design
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"

            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvdate"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                 android:text="12/04/2024" />

            <TextView
                android:id="@+id/tvPropertyName"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_height="wrap_content"
                android:text="Flat/indname" />


            <TextView
                android:id="@+id/tvCollectionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"

                android:text="Collection" />

            <TextView
                android:id="@+id/tvCollectionAmount"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount" />


             Add other views if needed
        </LinearLayout>
         Replace with your actual layout structure and design
    -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"

        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="12/04/2024"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvPropertyName"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:text="Flat/indname"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvdate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCollectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="Collection"
            app:layout_constraintEnd_toStartOf="@+id/tvCollectionAmount"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/tvCollectionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_12sdp"
            android:text="Amount"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Add other views if needed -->
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>