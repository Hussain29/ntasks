<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rents.EmployeeDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cns1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgemployeepic"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_140sdp"
                android:src="@drawable/no_profile_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgemployeepic"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvEmployeeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/interf"
                    android:text="Shaik Rafi Ahmed Qureshi"
                    android:textAlignment="center"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgemployeepic"
                    tools:layout_editor_absoluteY="1dp" />

                <TextView
                    android:id="@+id/tvEmployeeOccupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:fontFamily="@font/interf"
                    android:text="Occupation: Shopkeeper"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintStart_toEndOf="@+id/imgemployeepic"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/tvEmployeeNationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:fontFamily="@font/interf"
                    android:text="Nationality:INDIAN"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintStart_toEndOf="@+id/imgemployeepic"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />


                <TextView
                    android:id="@+id/tvEmployeeIqamaNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:fontFamily="@font/interf"
                    android:text="Iqama No.72891273983278"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tvEmpIqamaExpiryG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Expiry (G):21/02/1446" />

                <TextView
                    android:id="@+id/tvEmpIqamaExpiryH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Expiry (H):21/02/1446" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvownername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"

            app:cardCornerRadius="6dp"
             app:layout_constraintTop_toBottomOf="@+id/cns1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEmpPermanentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Permanent Address"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tvEmpEmergencyNo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact 1" />

                <TextView
                    android:id="@+id/tvEmpEmergencyNo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact 2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            app:cardCornerRadius="6dp"
            app:layout_constraintTop_toBottomOf="@+id/cvownername"
            tools:layout_editor_absoluteX="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEmpBirthCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BIRTH COUNTRY"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tvEmpBdayG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BIRTH DATE(G)" />

                <TextView
                    android:id="@+id/tvEmpBdayH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BIRTH DATE(H)" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">


