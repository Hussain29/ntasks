                    <TextView
                        android:id="@+id/tvEmpHealthInsurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HEALTH INSURANCE"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvEmpHealthInsExpiryG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EXPIRY(G)" />

                    <TextView
                        android:id="@+id/tvEmpHealthInsExpiryH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EXPIRY(H)" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/cvownername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"

                app:cardCornerRadius="6dp"
                app:layout_constraintTop_toBottomOf="@+id/cns1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmpIqamaDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IQAMA"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvEmpIqamaDetExpiryG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EXPIRY(G)" />

                    <TextView
                        android:id="@+id/tvEmpIqamaDetExpiryH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EXPIRY(H)" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/cvownername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"

                app:cardCornerRadius="6dp"
                app:layout_constraintTop_toBottomOf="@+id/cns1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmpPassport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PASSPORT"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvEmpPasExpiryG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EXPIRY(G)" />

                    <TextView
                        android:id="@+id/tvEmpPasExpiryH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EXPIRY(H)" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/cvownername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"

                app:cardCornerRadius="6dp"
                app:layout_constraintTop_toBottomOf="@+id/cns1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmpPasDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PASSPORT INFORMATION"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvEmpPassportNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NUMBER" />

                    <TextView
                        android:id="@+id/tvEmpPassportCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ISSUE CITY" />

                    <TextView
                        android:id="@+id/tvEmpPassportIssueDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ISSUE DATE" />

                    <TextView
                        android:id="@+id/tvEmpPassportExpiryDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EXPIRATION DATE" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/cvownername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"

                app:cardCornerRadius="6dp"
                app:layout_constraintTop_toBottomOf="@+id/cns1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvEmpDL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DRIVING LICENSE"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tvEmpDrivingLicenseNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DL NO." />

                    <TextView
                        android:id="@+id/tvEmpDLIssueDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ISSUE DATE" />

                    <TextView
                        android:id="@+id/tvEmpDLExpiryDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EXPIRATION DATE" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>




