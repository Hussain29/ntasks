<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rents.independent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_30sdp">

        <Button
            android:id="@+id/btnaddflats"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="\t\t\t\tAdd Independent House\t\t\t\t"
            app:icon="@drawable/addbox" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <ImageView
                        android:src="@drawable/independent"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"/>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewplot"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/interf"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="Independent House Name"
                            android:textColor="#5B5B5B"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewTaskDescription"

                            android:layout_width="@dimen/_215sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:fontFamily="@font/interf"
                            android:maxLines="1"

                            android:text="Area"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toBottomOf="parent"
                            tools:layout_editor_absoluteX="4dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <ImageView
                        android:src="@drawable/independent"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"/>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/interf"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="Independent House Name"
                            android:textColor="#5B5B5B"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewTaskDescription"

                            android:layout_width="@dimen/_215sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:fontFamily="@font/interf"
                            android:maxLines="1"

                            android:text="Area"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toBottomOf="parent"
                            tools:layout_editor_absoluteX="4dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp">

                    <ImageView
                        android:src="@drawable/independent"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"/>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/interf"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="Independent House Name"
                            android:textColor="#5B5B5B"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/textViewTaskDescription"

                            android:layout_width="@dimen/_215sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:fontFamily="@font/interf"
                            android:maxLines="1"

                            android:text="Area"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintTop_toBottomOf="parent"
                            tools:layout_editor_absoluteX="4dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</ScrollView>