<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".rents.TenantsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="match_parent">
<Button
    android:id="@+id/addtenants"
    android:text="ADD TENANTS"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">

            <ImageView
                android:src="@drawable/addpersonn"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/interf"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="TENANT NAME"
                    android:textColor="#5B5B5B"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvadd"

                    android:layout_width="@dimen/_215sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/interf"
                    android:maxLines="1"

                    android:text="FLAT/APARTMENT"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintTop_toBottomOf="parent"
                    tools:layout_editor_absoluteX="4dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">

            <ImageView
                android:src="@drawable/addpersonn"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/interf"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="TENANT NAME"
                    android:textColor="#5B5B5B"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvadd"

                    android:layout_width="@dimen/_215sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/interf"
                    android:maxLines="1"

                    android:text="FLAT/APARTMENT"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintTop_toBottomOf="parent"
                    tools:layout_editor_absoluteX="4dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">

            <ImageView
                android:src="@drawable/addpersonn"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/interf"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="TENANT NAME"
                    android:textColor="#5B5B5B"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvadd"

                    android:layout_width="@dimen/_215sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/interf"
                    android:maxLines="1"

                    android:text="FLAT/APARTMENT"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintTop_toBottomOf="parent"
                    tools:layout_editor_absoluteX="4dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>