<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".rents.TenantsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/_30sdp">

        <Button
            android:id="@+id/addTenants"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:text="\t\t\t\tAdd Tenant\t\t\t\t"
            app:icon="@drawable/addbox" />
        <Button
            android:id="@+id/btnpastTenants"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:text="PAST Tenants"
            app:icon="@android:drawable/ic_media_rew" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical">
            <!-- Add your content here -->
        </LinearLayout>

        <!-- RecyclerView for Tenants -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTenants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp" />
    </LinearLayout>

</LinearLayout>
