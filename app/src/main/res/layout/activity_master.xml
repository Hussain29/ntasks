<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Master">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:maxWidth="180dp"
            app:srcCompat="@drawable/osd" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="@drawable/rectangle_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/interf"
            android:lineHeight="23sp"
            android:text="Welcome!"
            android:textColor="#949494"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/interf"
            android:lineHeight="27sp"
            android:text="ONE STOP DASHBOARD"
            android:textColor="#5B5B5B"
            android:textSize="24sp"
            android:textStyle="bold" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:paddingTop="60dp">


            <ImageView
                android:id="@+id/thingstdi"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="25dp"
                android:shadowDx="12"
                android:shadowDy="12"
                android:src="@drawable/gtasks"
                android:textColor="@color/text"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/clientbtni"


                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="25dp"
                android:shadowDx="12"
                android:shadowDy="12"
                android:src="@drawable/group3"
                android:textColor="@color/text"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/vendorbtni"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="25dp"
                android:shadowDx="12"
                android:shadowDy="12"
                android:src="@drawable/gvendors"
                android:textColor="@color/text"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/hrbtni"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="25dp"
                android:shadowDx="12"
                android:shadowDy="12"
                android:src="@drawable/ghr11"
                android:textColor="@color/text"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/posbtni"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="25dp"
                android:shadowDx="12"
                android:shadowDy="12"
                android:src="@drawable/gpos"
                android:textColor="@color/text"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/rentsbtni"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="25dp"
                android:shadowDx="12"
                android:shadowDy="12"
                android:src="@drawable/grents"
                android:textColor="@color/text"
                android:textSize="16dp" />

        </GridLayout>

    </LinearLayout>
</LinearLayout>