<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rents.PropertiesActivity">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/_50sdp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnplots"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/_5sdp"

            android:background="@drawable/plots"
            android:text="Plots" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnapartments"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/apartments"
            android:text="Apartments"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnflats"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/flats"
            android:text="Flats"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnindependent"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"

            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/independents"
            android:text="Independent" />


    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_otherbuildings"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/others"
        android:text="Others"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>