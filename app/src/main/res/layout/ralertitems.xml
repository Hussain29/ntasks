<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTenantName"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:text="Name: "
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvapartment"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:text="Apartment: "
        app:layout_constraintStart_toEndOf="@+id/tvTenantName" />
    <TextView
        android:id="@+id/tvdop"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:text="Date Of Payment: "
        app:layout_constraintStart_toEndOf="@+id/tvapartment" />

    <TextView
        android:id="@+id/tvRentAmt"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:text="Amount: "
        app:layout_constraintTop_toBottomOf="@id/tvdop"
        app:layout_constraintStart_toEndOf="@+id/tvapartment" />

</androidx.constraintlayout.widget.ConstraintLayout>